<div class="container">
  <div class="dashboard-container">
    <h1>Bienvenue <%= current_user.username.downcase %> !</h1>
    <%# <p class="paragraph-large">Tu peux retrouver toutes les informations sur tes cours et tes certifications ici.</p> %>
    <div class="dashboard">
      <div class="tabs-dashboard">
        <ul>
          <li class="active-tab">Mes cours</li>
          <li>Certifications NFT</li>
        </ul>
      </div>
      <div class="non-finished-courses">
        <p class="large-paragraph">Mes cours en progression</p>
        <div class="display-cards-dashboard">
          <% current_user.classrooms.each do |classroom| %>
            <% unless classroom.finished? %>
              <%= render "shared/card_dashboard_unfinished", course: classroom.course, classroom: classroom %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="finished-courses">
        <p class="large-paragraph">Mes cours termin√©s</p>
        <div class="display-cards-dashboard">
          <% current_user.classrooms.each do |classroom| %>
            <% if classroom.finished? %>
              <%= render "shared/card_dashboard_finished", course: classroom.course, classroom: classroom %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
