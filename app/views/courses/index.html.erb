

<% if params[:query].present? %>
  <h1><%= pluralize( @courses.count, 'cour' ) %> pour '<%= params[:query] %>' :</h1>
<% else %>
  <h1>Tous nos cours :</h1>
<% end %>


<div id="courses">
  <% @courses.each do |course| %>
   <%= cl_image_tag(course.photo.key, :width => 400, :crop => "fill") %>
    <h4><%= course.name %></h4>
    <p><%= course.description %></p>
    <p><%= course.level %></p>
    <p><%= course.user[:email] %></p>
    <%= link_to "DÃ©couvrir", course_path(course) %>
  <% end %>
</div>
