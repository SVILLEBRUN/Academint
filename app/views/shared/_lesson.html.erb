<div class='course-display-content'>
  <h1><%= lesson.title %></h1>
  <% if lesson.media == "video" %>
    <div class="course-video">
      <%= cl_video_tag(lesson.content, :controls => true) %>
    </div>
  <% elsif lesson.media == "texte enrichi" %>
    <div class="trix-content">
      <%= lesson.enriched_content %>
    </div>
  <% elsif lesson.media == "texte enrichi + video" %>
    <div class="trix-content">
      <%= lesson.enriched_content %>
    </div>
    <div class="course-video">
      <%= cl_video_tag(lesson.content, :controls => true) %>
    </div>
  <% elsif lesson.media == "quizz" %>
    <% if @last_lecture.status == 'done' %>
    <h3>Félicitations !</h3>
      <p>Vous avez fini votre test, vous pouvez désormais récupérer votre certificat sur le cours '<strong><em><%= classroom.course.name %></em></strong>'</p>
      <div class="img-congrats">
        <%= image_tag "congrats.gif", style:'object-fit: scale-down', height:'360px' %>
      </div>
    <% else %>
      <p class="medium-paragraph justify-text"><%= lesson.content %></p>
    <% end %>
  <% else %>
    <p class="medium-paragraph justify-text"><%= lesson.content %></p>
  <% end %>
</div>
